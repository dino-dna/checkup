{
  "name": "checkup",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:dino-dna/checkup.git",
  "author": "cdaringe <cdaringe@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.7.1",
    "fs-extra": "^8.1.0",
    "menubar": "^6.0.8",
    "preact": "^10.0.0",
    "preact-compat": "^3.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/bluebird": "^3.5.28",
    "@types/fs-extra": "^8.0.0",
    "@types/node": "^12.11.1",
    "@types/react": "^16.9.7",
    "@types/react-dom": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "electron": "^6.0.12",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier-standard": "^15.0.1",
    "sass": "^1.23.0",
    "standardx": "^5.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "build": "run-s compile bundle",
    "build:watch": "run-p compile:watch bundle:watch",
    "bundle": "parcel build src/web/index.html",
    "bundle:watch": "parcel src/web/index.html",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "format": "prettier-standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standardx '{src,test,scripts}/**/*.{js,jsx,ts,tsx}' --fix"
  },
  "keywords": [
    "health",
    "check",
    "status",
    "monitor",
    "app",
    "electron",
    "statusbar",
    "menu",
    "menubar",
    "endpoint",
    "poll"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": 0
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  }
}
