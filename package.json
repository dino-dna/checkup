{
  "name": "checkup",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:dino-dna/checkup.git",
  "author": "cdaringe <cdaringe@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/bluebird": "^3.5.28",
    "@types/fs-extra": "^8.0.0",
    "@types/node": "^12.11.1",
    "@types/node-fetch": "^2.5.2",
    "application-config-path": "^0.1.0",
    "bluebird": "^3.7.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "menubar": "^6.0.8",
    "moment": "^2.24.0",
    "node-eval": "^2.0.0",
    "node-fetch": "^2.6.0",
    "preact": "^10.0.0",
    "preact-compat": "^3.19.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/lodash": "^4.14.144",
    "@types/react": "^16.9.7",
    "@types/react-dom": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "ava": "^2.4.0",
    "electron": "^6",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier-standard": "^15.0.1",
    "sass": "^1.23.0",
    "standardx": "^5.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "build": "run-s compile bundle",
    "build:watch": "run-p compile:watch bundle:watch",
    "bundle": "parcel build --public-url ./ src/web/index.html",
    "bundle:watch": "parcel watch --no-hmr --public-url ./ src/web/index.html",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "format": "prettier-standard '{src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standardx '{src,test,scripts}/**/*.{js,jsx,ts,tsx}' --fix",
    "test": "NODE_ENV=test ava",
    "electron": "NODE_ENV=production electron src/bin.js"
  },
  "keywords": [
    "health",
    "check",
    "status",
    "monitor",
    "app",
    "electron",
    "statusbar",
    "menu",
    "menubar",
    "endpoint",
    "poll"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": 0
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "ava": {
    "babel": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "compileEnhancements": false,
    "files": [
      "test/**.test.ts"
    ]
  }
}
